{
    "include": [
        "./**/*.js",
        "./**/*.d.ts",
        "./**/*.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "target": "ES2015",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "src",
        "outDir": "dist",
        "allowJs": true
    },
    "exclude": [
        "__tests__",
        "node_modules",
        "dist",
        "dist-dev",
        "dist-prod"
    ]
}